# Production Environment Configuration
# Copy this file to .env and fill in your production values

# Server Configuration
NODE_ENV=production
PORT=3000

# CRITICAL: Generate a strong session secret
# Use: openssl rand -base64 64
SESSION_SECRET=YOUR_64_CHARACTER_MINIMUM_RANDOM_STRING_HERE

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@host:port/database_name?ssl=true

# Redis Configuration (optional, for high-performance session storage)
REDIS_URL=redis://user:password@host:port

# Frontend URL (required for CORS)
FRONTEND_URL=https://your-production-domain.com

# Cookie Domain (optional, for subdomain sharing)
COOKIE_DOMAIN=.your-domain.com

# AI Provider API Key (choose one)
OPENAI_API_KEY=sk-your-openai-api-key
# OR
# ANTHROPIC_API_KEY=your-anthropic-api-key
# OR  
# GEMINI_API_KEY=your-gemini-api-key

# Twilio Configuration (for SMS verification)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (for email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@your-domain.com

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT_MS=1800000    # 30 minutes
SESSION_ABSOLUTE_TIMEOUT_MS=7200000  # 2 hours
CSRF_TOKEN_LENGTH=32

# Monitoring (optional but recommended)
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_SMS_VERIFICATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SESSION_MONITORING=true
ENABLE_SECURITY_HEADERS=true